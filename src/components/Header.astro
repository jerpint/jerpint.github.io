---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import ThemeIcon from './ThemeIcon.astro';
---

<header>
	<nav>
		<a href="/" class="logo">
			<img src="/favicon.svg" alt="Site Logo" />
		</a>
		<div class="internal-links">
			<HeaderLink href="/">~/home</HeaderLink>
			<HeaderLink href="/blog">~/posts</HeaderLink>
			<HeaderLink href="/videos">~/videos</HeaderLink>
			<HeaderLink href="/publications">~/publications</HeaderLink>
			<HeaderLink href="/resume">~/resume</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://github.com/jerpint" target="_blank">
				<span class="sr-only">Go to jerpint's GitHub</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
					><path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					></path></svg
				>
			</a>
			<ThemeIcon />
		</div>
	</nav>
</header>
<style>
	div {
		display: flex;
		justify-content: space-between;
	}

	header {
		margin: 0;
		padding: 0;
		background: #ffffff;
		border-bottom: 1px solid var(--border-color);
	}

	h2 {
		margin: 0;
		font-size: 1.1em;
		font-weight: 600;
		letter-spacing: -0.02em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		border-bottom: none;
		color: rgb(var(--black));
	}

	h2 a:hover {
		color: var(--accent);
		border-bottom: none;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1200px;
		margin: 0 auto;
		padding: 1.2em 1.5em;
	}

	.logo {
		display: flex;
		align-items: center;
		padding: 0;
		border-bottom: none;
	}

	.logo:hover {
		background-color: transparent;
		border-bottom: none;
	}

	.logo img {
		height: 36px;
		width: 36px;
		transition: transform 0.2s ease;
	}

	/* Dark mode styling for logo */
	:global(html.dark) .logo img {
		filter: invert(1);
	}

	.logo:hover img {
		transform: scale(1.1);
	}

	.internal-links {
		display: flex;
		gap: 0.5em;
	}

	nav a {
		padding: 0.5em 0.8em;
		color: rgb(var(--gray));
		border-bottom: none;
		text-decoration: none;
		transition: all 0.2s ease;
		font-size: 0.9em;
	}

	nav a:hover {
		color: rgb(var(--black));
		background-color: rgb(var(--gray-light));
		border-radius: 4px;
		border-bottom: none;
	}

	nav a.active {
		color: var(--accent);
		background-color: rgb(var(--gray-light));
		border-radius: 4px;
		border-bottom: none;
	}

	.social-links {
		display: flex;
		gap: 0.5em;
	}

	.social-links a {
		display: flex;
		align-items: center;
		padding: 0.4em;
		color: rgb(var(--gray));
	}

	.social-links a:hover {
		color: rgb(var(--black));
		background-color: transparent;
	}

	@media (max-width: 720px) {
		nav {
			padding: 1em;
		}

		.internal-links {
			gap: 0.2em;
		}

		nav a {
			padding: 0.4em 0.6em;
			font-size: 0.85em;
		}

		h2 {
			font-size: 1em;
		}

		.logo img {
			height: 28px;
			width: 28px;
			display: block;
			min-height: 28px;
			min-width: 28px;
		}

		.social-links {
			display: none;
		}
	}
</style>
