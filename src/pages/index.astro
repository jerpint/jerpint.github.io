---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { Image } from 'astro:assets';
import profilePhoto from '../assets/images/jer-photo.jpeg';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				min-height: 60vh;
				display: flex;
				flex-direction: column;
				justify-content: center;
			}
			.profile-photo {
				width: 300px;
				height: 300px;
				border-radius: 50%;
				margin: 0 auto 1.5em;
				display: block;
				object-fit: cover;
			}

			h1 {
				font-size: 2.8em;
				margin-bottom: 0.5em;
				text-align: center;
				letter-spacing: -0.02em;
			}

			.subtitle {
				text-align: center;
				color: rgb(var(--gray));
				font-size: 1.1em;
				margin-bottom: 2em;
			}

			.links {
				display: flex;
				justify-content: center;
				gap: 1em;
				flex-wrap: wrap;
			}

			.links a {
				padding: 0.6em 1.2em;
				background-color: rgb(var(--gray-light));
				border-radius: 4px;
				color: rgb(var(--black));
				font-size: 0.95em;
				transition: all 0.2s ease;
			}

		.links a:hover {
			background-color: var(--accent);
			color: white;
			border-bottom: none;
		}

		.social-links {
			display: flex;
			justify-content: center;
			gap: 1em;
			margin-top: 2em;
		}

		.social-links a {
			display: flex;
			align-items: center;
			padding: 0.5em;
			color: rgb(var(--gray));
			transition: all 0.2s ease;
			border-radius: 4px;
		}

		.social-links a:hover {
			color: rgb(var(--black));
			background-color: rgb(var(--gray-light));
			border-bottom: none;
		}

		.social-links a svg path {
			fill: rgb(var(--gray-dark));
		}

		.social-links a:hover svg path {
			fill: rgb(var(--black));
		}

		@media (max-width: 720px) {
			h1 {
				font-size: 2em;
			}

			.subtitle {
				font-size: 1em;
			}
		}
		</style>
	</head>
