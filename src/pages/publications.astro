const publications = [
	{
		title: "Ignore This Title and HackAPrompt: Exposing Systemic Vulnerabilities of LLMs through a Global Scale Prompt Hacking Competition",
		authors: "S Schulhoff, J Pinto, A Khan, LF Bouchard, C Si, S Anati, V Tagliabue, et al.",
		venue: "Empirical Methods in Natural Language Processing (EMNLP)",
		year: 2023,
		citations: 158,
		link: "https://paper.hackaprompt.com/",
		award: "EMNLP2023 Best Theme Paper Award"
	},
	{
		title: "Current practices in voice data collection and limitations to voice AI research: a national survey",
		authors: "E Evangelista, R Kale, D McCutcheon, A Rameau, A Gelbard, M Powell, et al.",
		venue: "The Laryngoscope 134 (3), 1333-1339",
		year: 2024,
		citations: 11
	},
	{
		title: "Deep learning for voice gender identification: proof‚Äêof‚Äêconcept for gender‚Äêaffirming voice care",
		authors: "Y Bensoussan, J Pinto, M Crowson, PR Walden, F Rudzicz, M Johns III",
		venue: "The Laryngoscope 131 (5), E1611-E1615",
		year: 2021,
		citations: 18
	},
	{
		title: "A comparison of an artificial intelligence tool to fundamental frequency as an outcome measure in people seeking a more feminine voice",
		authors: "Y Bensoussan, C Park, M Johns III, S Brown, J Pinto, J Chang, M Courey",
		venue: "The Laryngoscope 131 (11), 2567-2571",
		year: 2021,
		citations: 6
	},
	{
		title: "Validation of an AI-assisted treatment outcome measure for gender-affirming voice care: comparing AI accuracy to listener's perception of voice femininity",
		authors: "S Simon, E Silverstein, L Timmons-Sund, JM Pinto, ME Castro, K O'Dell, et al.",
		venue: "Journal of Voice",
		year: 2023,
		citations: 3
	},
	{
		title: "Cancer Classification in Human Brain and Prostate Using Raman Spectroscopy and Machine Learning",
		authors: "J Pinto",
		venue: "University of Waterloo (MASc. Thesis)",
		year: 2017,
		citations: 1
	},
	{
		title: "Road Defect Detection in Street View Images using Texture Descriptors and Contour Maps",
		authors: "D Abou Chacra, H Leopold, J Pinto, N Lunscher, G Younes, J Zelek",
		venue: "Journal of Computational Vision and Imaging Systems 2 (1)",
		year: 2016,
		citations: 4
	},
	{
		title: "IR Shape From Shading Enhanced RGBD for 3D Scanning",
		authors: "N Lunscher, G Younes, D Abou Chacra, H Leopold, J Pinto, J Zelek",
		venue: "Journal of Computational Vision and Imaging Systems 2 (1)",
